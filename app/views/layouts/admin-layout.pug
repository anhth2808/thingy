    link(rel='stylesheet', href='/assets/css/nucleo-icons.css')


    //- link(href='/assets/css/blk-design-system.css', rel='stylesheet')
    link(rel='stylesheet', href='/assets/css/blk-design-system.css')
    link(rel='stylesheet', href='/assets/css/mystyle.css')
    block styles
    
  body.landing-page
    nav.navbar.navbar-expand-lg.navbar-transparent(color-on-scroll='100')
      .container
        .navbar-translate
          a.navbar-brand(href='/', rel='tooltip', title='NTU', data-placement='bottom', target='_blank')
            span NTU
          button.navbar-toggler.navbar-toggler(type='button', data-toggle='collapse', data-target='#navigation', aria-controls='navigation-index', aria-expanded='false', aria-label='Toggle navigation')
            span.navbar-toggler-bar.bar1
            span.navbar-toggler-bar.bar2
            span.navbar-toggler-bar.bar3
        #navigation.collapse.navbar-collapse.justify-content-end
          .navbar-collapse-header
            .row
              .col-6.collapse-brand
                a
                  | BLK•
              .col-6.collapse-close.text-right
                button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navigation', aria-controls='navigation-index', aria-expanded='false', aria-label='Toggle navigation')
                  i.tim-icons.icon-simple-remove
          ul.navbar-nav
            - if (!isAuthenticated && !isAdmin) {
              li.nav-item.p-0.ml-auto
                a.nav-link.btn.btn-default(href='/login') Đăng nhập
            - } else {
              li.nav-item.p-0.ml-auto
                form(action="/logout", method="post")
                  button.nav-link.btn.btn-default(type="submit")
                    |  Logout
            - }
              
    .wrapper
      .page-background
        .page-header
          img.path(src='../assets/img/blob.png')
          img.path2(src='../assets/img/path2.png')
          img.shapes.triangle(src='../assets/img/triunghiuri.png')
          img.shapes.wave(src='../assets/img/waves.png')
          img.shapes.squares(src='../assets/img/patrat.png')
          img.shapes.circle(src='../assets/img/cercuri.png')
      block content
                   
    script(src='/assets/js/core/jquery.min.js')
    script(src='/assets/js/core/popper.min.js')
    script(src='/assets/js/core/bootstrap.min.js')
    script(src='/assets/js/plugins/perfect-scrollbar.jquery.min.js')

    script(src='/assets/js/plugins/bootstrap-switch.js')

    script(src='/assets/js/plugins/nouislider.min.js')

    script(src='/assets/js/plugins/chartjs.min.js')

    script(src='/assets/js/plugins/moment.min.js')
    script(src='/assets/js/plugins/bootstrap-datetimepicker.js')

    script(src='/assets/js/blk-design-system.min.js')

    //- script(src='http://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js')
    script(src='/socket.io/socket.io.js')
    script(src="/assets/js/main.js")
    
    block scripts