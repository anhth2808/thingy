extends ../layouts/main-layout.pug

block styles

block content
  main
    .container 
      .form
        - if (errorMessage) {
            .user-message.user-message--error #{errorMessage}
        - }
        form.login-form(action="/signup", method="POST", novalidate)
          input(type="hidden", value=csrfToken, name="_csrf")
          .login-control
            label(for="email") Email
            input.form-control(type="text", name="email", value=oldInput.email, class=(validationErrors.find(e => e.param === "email")) ? "invalid" : "")#email
          .login-control
            label(for="password") Mật khẩu
            input.form-control(type="password", name="password", value=oldInput.password, class=(validationErrors.find(e => e.param === "password")) ? "invalid" : "")#password
          .login-control
            label(for="confirmPassword") Nhập lại mật khẩu
            input.form-control(type="password", name="confirmPassword", value=oldInput.confirmPassword, , class=(validationErrors.find(e => e.param === "confirmPassword")) ? "invalid" : "")#confirmPassword
          .centered
            button.btn(type="submit") Đăng ký